<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="net.liftweb.db" level="error" />
	<logger name="net.liftweb.mapper.MetaMapper" level="info" />
	<logger name="choice.actor.FileManager" level="info" />
	<logger name="choice.lib" level="debug" />
	<logger name="choice.fs.GroupInfo" level="info" />
	<logger name="choice.lib.fileops" level="info" />
	<logger name="choice.model" level="info" />
	<logger name="net.liftweb.util.TimeHelpers" level="error" />
	<logger name="net.liftweb.mapper.OneToMany" level="error" />
	<logger name="net.liftweb.db.ProtoDBVendor" level="error" />
	<logger name="bootstrap.liftweb.Boot" level="error" />
	<logger name="comet_trace" level="info"/>
	
	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
